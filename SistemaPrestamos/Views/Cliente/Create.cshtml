@model SistemaPrestamos.Models.DTOs.ClienteDTO
@{
    ViewData["Title"] = "Crear";
}

<div class="card mt-5">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-save"></i>&nbsp;Crear Cliente
        </div>
        <div class="col-md-6 text-right"> </div>
    </div>
    <div class="card-body">
        <form class="mt-2" method="post" asp-action="Create">
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Nombre" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.Nombre" />
                            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Cedula" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.Cedula" />
                            <span asp-validation-for="@Model.Cedula" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.CodigoPin" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.CodigoPin" />
                            <span asp-validation-for="@Model.CodigoPin" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Telefono" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.Telefono" />
                            <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Direccion" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            @Html.TextAreaFor(x => x.Direccion, new { @class = "form-control" })
                            <span asp-validation-for="@Model.Direccion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <input type="submit" class="btn btn-info form-control" value="Crear" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success form-control">Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Index";
}

<div class="card" style="margin-top:30px">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-list-ul"></i>&nbsp;Lista de Clientes
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" asp-controller="Product" class="btn btn-primary btn-sm text-white"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.Count() > 0)
            {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                        <th>@Html.DisplayNameFor(x => x.Cedula)</th>
                        <th>@Html.DisplayNameFor(x => x.CodigoPink)</th>
                        <th>@Html.DisplayNameFor(x => x.Telefono)</th>
                        <th>@Html.DisplayNameFor(x => x.Direccion)</th>
                        <th>@Html.DisplayNameFor(x => x.Estado)</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Cedula</td>
                            <td>@item.CodigoPink</td>
                            <td>@item.Telefono</td>
                            <td>@item.Direccion</td>
                            <td><span class='badge @(item.Estado ? "badge-success": "badge-danger")'> @(item.Estado ? "Activo":"Inactivo")</span></td>
                        </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <p>No hay registro en base de datos</p>
            }
        </div>
    </div>
</div>


@model SistemaPrestamos.Models.DTOs.PrestamoDTO
@{
    ViewData["Title"] = "Listar";
}

<div class="card" style="margin-top:30px">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-money"></i>&nbsp;Comisiones
        </div>
    </div>
    <div class="card-body">
        <input type="hidden" id="txtMontoPrestamo" />
        <div class="mt-4">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Empleado</label>
                    <input type="text" class="form-control" asp-for="Nombre" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label>% Prestamo</label>
                    <input type="text" class="form-control" id="txtPorcentaje" onkeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false;">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputState">Prestamos</label>
                    @Html.DropDownList("ComboboxPrestamo", new SelectList(Model.Prestamos, "Id", "Codigo"), "-- Seleccione un prestamo--", new { @class = "form-control" })
                </div>
                <div class="form-group col-md-6">
                    <label>Comisión</label>
                    <input type="text" class="form-control" id="txtComision" readonly>
                </div>
            </div>
            <button type="button" class="btn btn-info pull-right">Agregar</button>
        </div>
        <div class="mt-5">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nº Préstamo</th>
                        <th>Monto del Prestamo</th>
                        <th>% Prestamo</th>
                        <th>Comisión</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>07854</td>
                        <td>1200.00</td>
                        <td>8%</td>
                        <td>80</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" title="Editar"
                                   class="btn btn-info btn-sm text-white"><i class="fa fa-pencil"></i></a>
                                <a asp-action="Delete" title="Eliminar"
                                   class="btn btn-danger btn-sm text-white"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="btn-group pull-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger pull-right">Cancelar</a>&nbsp;
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary pull-right">Guardar</a>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Mantenimientos/Prestamo.js"></script>
}


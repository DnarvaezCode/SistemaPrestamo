@model IEnumerable<SistemaPrestamos.Models.DTOs.FormaPagoDTO>
@{
    ViewData["Title"] = "Listar";
}

<div class="card" style="margin-top:30px">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-list-ul"></i>&nbsp;Forma de Pago
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" asp-controller="FormaPago" class="btn btn-primary btn-sm text-white"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                            <th>@Html.DisplayNameFor(x => x.Estado)</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td><span class='badge @(item.Estado ? "badge-success": "badge-danger")'> @(item.Estado ? "Activo":"Inactivo")</span></td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" title="Editar"
                                           class="btn btn-info btn-sm text-white"><i class="fa fa-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"
                                           class="btn btn-danger btn-sm text-white"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No hay registro en base de datos</p>
            }
        </div>
    </div>
</div>

